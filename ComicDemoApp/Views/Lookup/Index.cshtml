@model IEnumerable<ComicDemoModels.ComicBook>
@{
    ViewData["Title"] = "Look Up Online";
}
<h2>Comic Vine Online Listing</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IssueNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CoverDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateLastUpdated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IssueDetailURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Volume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserNote)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
            <tr>
                <td>                
                    <img src="@Html.DisplayFor(modelItem => item.Image)" alt="IMAGES" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IssueNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CoverDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateLastUpdated)
                </td>
                <td>
                    <a href="@Html.DisplayFor(modelItem => item.IssueDetailURL)" target="_blank">Comic Vine Link</a>                 
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Volume)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserNote)
                </td>
                <td>
                    <a asp-action="AddToMyCollection" asp-route-id="@item.Id">Add</a>
                </td>
            </tr>
        }
    </tbody>
</table>
